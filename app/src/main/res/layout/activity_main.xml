<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="433dp"
        android:background="#2196F3">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="60dp"
            android:background="#2196F3"
            android:orientation="vertical"
            android:scaleX="1.1"
            android:scaleY="1.1">

            <ImageView
                android:id="@+id/mainImage"
                android:layout_width="30dp"
                android:layout_height="160dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="40dp"
                android:layout_weight="1"
                android:scaleX="1.2"
                android:scaleY="1.2"
                app:srcCompat="@drawable/newsto1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="137dp"
                android:layout_marginTop="45dp"
                android:text="뉴스토"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:textColor="#ffffff"
                android:textSize="50dp"
                android:typeface="serif" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="내가 보고싶은 뉴스만 골라서 보자!"
        android:textSize="20dp"
        android:typeface="serif" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="50dp"
            android:onClick="onClickstar"
            android:scaleX="2.3"
            android:scaleY="2.3"
            app:srcCompat="@drawable/imageview1" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="44dp"
            android:layout_height="30dp"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="50dp"
            android:onClick="onClicknews"
            android:scaleX="2.3"
            android:scaleY="2.3"
            app:srcCompat="@drawable/imageview2" />

        <ImageView
            android:id="@+id/imageVIew3"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="50dp"
            android:onClick="onClickbroadcast"
            android:scaleX="2.3"
            android:scaleY="2.3"
            app:srcCompat="@drawable/imageview3" />

        <ImageView
            android:id="@+id/imageVIew4"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="47.5dp"
            android:layout_marginTop="50dp"
            android:onClick="onClickinfo"
            android:scaleX="2.3"
            android:scaleY="2.3"
            app:srcCompat="@drawable/imageview4" />
    </TableRow>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:text="개발자 : 최정원  이재영"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:gravity="right"
        android:text="v1.0.0" />

</LinearLayout>